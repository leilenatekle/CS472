<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>cs472.mum.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>cs472.mum.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>ValidateServlet</servlet-name>
        <servlet-class>cs472.mum.ValidateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidateServlet</servlet-name>
        <url-pattern>/validate</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ThankyouServlet</servlet-name>
        <servlet-class>cs472.mum.ThankyouServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ThankyouServlet</servlet-name>
        <url-pattern>/thankyou</url-pattern>
    </servlet-mapping>

</web-app>